rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Articles collection - public read, admin write
    match /articles/{articleId} {
      allow read: if true;
      allow write: if request.auth != null && 
        (request.auth.token.admin == true || 
         request.auth.token.email in ['admin@acronweb.com', 'admin@alfaschools.gr']);
    }
    
    // View counts collection - public read/write for analytics
    match /viewCounts/{viewCountId} {
      allow read, write: if true;
    }
    
    // Settings collection - public read, admin write
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null && 
        (request.auth.token.admin == true || 
         request.auth.token.email in ['admin@acronweb.com', 'admin@alfaschools.gr']);
    }
    
    // Site theme - public read, authenticated users write
    match /settings/site-theme {
      allow read: if true; // Everyone can read the theme
      allow write: if request.auth != null; // Any authenticated user can change the theme
    }
    
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
  // Newsletter subscribers - public write for subscription, server-side read for newsletter API
  match /newsletter_subscribers/{subscriberId} {
    allow read: if true; // Allow server-side access for newsletter API
    allow write: if true; // Allow public subscription
  }
    
    // Admin collection - admin only
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
        (request.auth.token.admin == true || 
         request.auth.token.email in ['admin@acronweb.com', 'admin@alfaschools.gr']);
    }
    
    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}